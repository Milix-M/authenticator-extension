{
  "manifest_version": 3,
  "name": "Authenticator",
  "version": "1.1.1",
  "description": "二段階認証コードを生成します。",
  "action": { "default_popup": "index.html" },
  "permissions": ["storage", "activeTab", "scripting", "contextMenus"],
  "icons": {
    "16": "icons/authenticator_16.png",
    "48": "icons/authenticator_48.png",
    "128": "icons/authenticator_128.png"
  },
  "background": {
    "service_worker": "./src/background.ts",
    "type": "module"
  }
}
